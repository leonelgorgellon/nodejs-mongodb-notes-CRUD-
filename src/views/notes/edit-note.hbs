<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar Nota</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit/{{note._id}}?_method=put" method="post">
        <input type="hidden" name="_method" value="put" />
        <div class="form-group mb-3" >
          <input type="text" class="form-control" name="title" value="{{note.title}}"/>
        </div>
        <div class="form-group mb-3">
          <textarea name="description" class="form-control">{{note.description}}</textarea>
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-primary d-grid gap-2 col-6 mx-auto" type="submit">
            Guardar
          </button>
        </div>

      </form>
    </div>
  </div>
</div>